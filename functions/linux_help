#!/bin/usr/env bash

function help_docker ()
{
    text "${yel}Installation Help:${end} You must run the following command manually"
    text "$(help_docker_command)"
}

function help_docker_command ()
{
    text "ddt-linux-install-docker"
}

function help_docker_compose ()
{
    text "${yel}Installation Help:${end} You must run the following commands manually"
    text "$(help_docker_compose_command)"
}

function help_docker_compose_command ()
{
    text "version=1.21.2 && system=$(uname -s) && arch=$(uname -m);"
    text "sudo curl -L https://github.com/docker/compose/releases/download/\${version}/docker-compose-\${system}-\${arch} -o /usr/local/bin/docker-compose;"
    text "sudo chmod +x /usr/local/bin/docker-compose;"
}

function help_php ()
{
    text "${yel}Installation Help:${end} $(help_php_command)"
}

function help_php_command ()
{
    text "sudo apt-get update && sudo apt-get install -y php php-curl php-mysql"
}

function help_node ()
{
    text "${yel}Installation Help:${end} You must run the following command manually"
    text "$(help_node_command)"
}

function help_node_command ()
{
    url="https://deb.nodesource.com/setup_8.x"

    text "curl -sL ${url} | sudo -E bash - && sudo apt-get install -y nodejs"
}

function help_npm () 
{
    text "There is no help for this"
}

function help_npm_command () 
{
    text "There is no help for this"
}

function help_git ()
{
    text "${yel}Installation Help:${end} You must run the following command manually"
    text "$(help_git_command)"
}

function help_git_command ()
{
    text "sudo apt-get update && sudo apt-get install -y git"
}
